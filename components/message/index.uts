export default {
	props: {
		closeTime: {
			type: Number,
			default: 3
		}
	},
	data(){
		return {
			visible: false,
			message: null
		}
	},
	methods: {
		success(value: string){
			this.message = value
			this.visible = true
			
			setTimeout(()=>{
				this.visible = false
			}, this.closeTime * 1000)
		}
	}
}