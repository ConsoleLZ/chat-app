{
	"easycom": {
		"autoscan": true,
		"custom": {
			"^uv-(.*)": "@climblee/uv-ui/components/uv-$1/uv-$1.vue"
		}
	},
	"pages": [
		{
			"path": "pages/message/index",
			"style": {
				"navigationStyle": "custom"
			}
		},
		{
			"path": "pages/contact-list/index",
			"style": {
				"navigationStyle": "custom",
				"enablePullDownRefresh": true
			}
		},
		{
			"path": "pages/about/index",
			"style": {
				"navigationBarTitleText": "个人中心",
				"navigationBarBackgroundColor": "#ffffff"
			}
		},
		{
			"path": "pages/login/index",
			"style": {
				"navigationBarTitleText": "登录",
				"navigationBarTextStyle": "white"
			}
		},
		{
			"path": "pages/register/index",
			"style": {
				"navigationBarTitleText": "注册",
				"navigationBarTextStyle": "white"
			}
		},
		{
			"path": "sub-pages/search-contact/index",
			"style": {
				"navigationStyle": "custom"
			}
		},
		{
			"path": "sub-pages/new-contacts/index",
			"style": {
				"navigationBarTitleText": "新朋友"
			}
		},
		{
			"path": "sub-pages/chat-message/index",
			"style": {
				"navigationStyle": "custom"
			}
		}
	],
	"globalStyle": {
		"navigationBarTitleText": "随聊",
		"navigationBarBackgroundColor": "#3c9cff",
		"navigationBarTextStyle": "black"
	},
	"tabBar": {
		"color": "#7A7E83",
		"selectedColor": "#3c9cff",
		"borderStyle": "white",
		"backgroundColor": "#f9f9f9",
		"list": [
			{
				"pagePath": "pages/message/index",
				"iconPath": "/static/tabbar/message.png",
				"selectedIconPath": "/static/tabbar/message-select.png",
				"text": "消息"
			},
			{
				"pagePath": "pages/contact-list/index",
				"iconPath": "/static/tabbar/contact.png",
				"selectedIconPath": "/static/tabbar/contact-select.png",
				"text": "联系人"
			},
			{
				"pagePath": "pages/about/index",
				"iconPath": "/static/tabbar/about.png",
				"selectedIconPath": "/static/tabbar/about-select.png",
				"text": "我的"
			}
		]
	},
	"uniIdRouter": {},
	"condition": {
		"current": 0,
		"list": [
			{
				"name": "",
				"path": "sub-pages/chat-message/index",
				"query": ""
			}
		]
	}
}